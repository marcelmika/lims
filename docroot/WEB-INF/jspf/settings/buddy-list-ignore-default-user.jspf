<%-- Variables --%>
<%--@elvariable id="properties" type="com.marcelmika.lims.portal.domain.Properties"--%>

<%-- Defaults --%>
<c:set var="checked" value=""/>

<%-- Decide if the swtich should be checked --%>
<c:if test="${properties.buddyListIgnoreDefaultUser}">
    <c:set var="checked" value="checked"/>
</c:if>

<%-- Render --%>
<li class="buddy-list-ignore-default-user">
    <label class="switch">
        <input ${checked} type="checkbox"/>
        <span></span>
    </label>
    <span>
        <liferay-ui:message key="panel-settings-admin-area-buddy-list-ignore-default-user-title"/>
    </span>
</li>