<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<!-- http://www.liferay.com/web/guest/community/wiki/-/wiki/Main/liferay-portlet.xml%20(5.2.0) -->

<liferay-portlet-app>
    <portlet>
        <portlet-name>1</portlet-name>
        <!-- Friendly URL -->
        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <friendly-url-mapping>lims</friendly-url-mapping>
        <friendly-url-routes>com/marcelmika/lims/portlet/chat-friendly-url-routes.xml</friendly-url-routes>
        <!-- Poller -->
        <poller-processor-class>com.marcelmika.lims.portal.poller.ChatPollerProcessor</poller-processor-class>
        <!-- CSS -->
        <header-portlet-css>/css/token-input-facebook.css</header-portlet-css>
        <header-portlet-css>/css/token-input.css</header-portlet-css>
        <header-portlet-css>/css/main.css</header-portlet-css>
        <!-- JS -->
        <footer-portlet-javascript>/js/main.js</footer-portlet-javascript>  
                
        <css-class-wrapper>liferay-ims</css-class-wrapper>
        <add-default-resource>true</add-default-resource>      
        <system>true</system>                       
    </portlet>
</liferay-portlet-app>